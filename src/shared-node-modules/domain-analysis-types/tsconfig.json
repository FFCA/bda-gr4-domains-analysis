{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./lib/esm",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src"
    ]
}
